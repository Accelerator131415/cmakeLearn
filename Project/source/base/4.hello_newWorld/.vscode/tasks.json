{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}\\code\\temp"
    },
    "tasks": [
        {
            "label": "clean",
            "command": "rm",
            "args":[
                "-rf",
                "./*"
            ],
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
        "label": "Cmake program",
        "command": "cmake",
        "args": [
            "-G",
            "MinGW Makefiles",
            "${workspaceFolder}\\code"
        ],
        "type": "process",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        // "dependsOn":"clean"
    },
    {
        "label" : "makeObj",
        "command": "make",
        "args":[],
        "type": "process",
        "group": {
            "kind" :"build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "dependsOn":["Cmake program"]

    }]
}